extends ../layout/index
block mainContent
    h2.title !{mainTitle}

    p MainContent

    form.form(action='/user/settings', method='post')
        .form-input
            label(for='layout-type') Layout

            select(id='layout-type' name='layoutType')
                option(value='expanded' selected=user.settings.layout.type=='expanded') Expanded
                option(value='collapsed' selected=user.settings.layout.type=='collapsed') Collapsed
                
        .form-input
            input.button.success(type='submit' value='Save')