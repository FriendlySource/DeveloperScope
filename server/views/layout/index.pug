doctype html
html#root
    head
        meta(charset='utf-8')
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title Developer Scope
        link(rel="stylesheet", href="/css/style.css")
    body#layout.expanded
        header#layout-header
            .top-bar
                h1.app-name Developer Scope

                if (currentUser)
                    ul.top-bar-right
                        li
                            a(class='top-bar-item' href='user/profile' data-icon='account_circle')
                        li
                            form(id='logout-form' method='POST' action='user/logout')
                                a(href='javascript: document.getElementById("logout-form").submit();' class='top-bar-item' data-icon='exit_to_app')                    
                else
                    ul.top-bar-right
                        li
                            a(href='/user/register' title='Register') Register
                        li
                            a(href='/user/login' title='Login') Login
        
        nav#layout-navigation
            include navigation

        main#layout-content
            .content.main-content
                if (globalMessages && globalMessages.length)
                    .global-message
                        each message in globalMessages
                            p.text.error=message

                block mainContent
        
        footer#layout-footer
            p copyright 2016