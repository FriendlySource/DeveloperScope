-
    var navItemsLoggedIn = [
        { "label": "Home", "href": "/", "icon": "home" },
        { "label": "Portfolio", "href": "/developer/portfolio", "icon": "code" },
        { "label": "Scope", "href": "/developer/scope", "icon": "developer_board" },
        { "label": "Settings", "href": "/user/settings", "icon": "settings" },
        { "label": "About", "href": "/about", "icon": "new_releases" },
    ];

    var navItemsNotLoggedIn = [
        { "label": "Home", "href": "/", "icon": "home" },
        { "label": "About", "href": "/about", "icon": "new_releases" },
    ];

ul.navigation-items
    if (locals.currentUser)
        each item in navItemsLoggedIn
            li.navigation-item
                a(href=item.href, class=`navigation-item-link ${item.label == activePage ? 'active' : ''} ${item.className ? item.className : ''}` title=item.label data-icon=item.icon) !{item.label}
    else
        each item in navItemsNotLoggedIn
            li.navigation-item
                a(href=item.href, class=`navigation-item-link ${item.label == activePage ? 'active' : ''} ${item.className ? item.className : ''}` title=item.label data-icon=item.icon) !{item.label}